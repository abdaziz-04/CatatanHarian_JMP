    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/orange</item>
        <item name="titleTextColor">@color/putihabu</item>
    </style>

    <style name="Theme.CatatanHarian" parent="Base.Theme.CatatanHarian" />

</resources>